{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "clang-debug",
      "displayName": "Clang Debug",
      "description": "Debug build using Clang compiler",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-debug",
      "environment": {
        "CC": "ccache /usr/bin/clang",
        "CXX": "ccache /usr/bin/clang++",
        "LDFLAGS": "-fuse-ld=lld"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -fdiagnostics-color=always -g3 -fno-omit-frame-pointer -funwind-tables",
        "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -fdiagnostics-color=always -g3 -fno-omit-frame-pointer -funwind-tables",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld -rdynamic",
        "BINARY_POSTFIX": "-x64"
      }
    },
    {
      "name": "arm64-debug",
      "displayName": "ARM64 Clang Debug",
      "description": "Debug build for ARM64 using Clang cross-compiler with schroot sysroot",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-debug-arm64",
      "toolchainFile": "${sourceDir}/arm64-toolchain.cmake",
      "environment": {
        "CC": "ccache clang-19",
        "CXX": "ccache clang++-19",
        "LDFLAGS": "-fuse-ld=lld-19",
        "PKG_CONFIG_PATH": "/srv/chroot/arm64-bookworm/usr/lib/aarch64-linux-gnu/pkgconfig:/srv/chroot/arm64-bookworm/usr/lib/pkgconfig",
        "PKG_CONFIG_SYSROOT_DIR": "/srv/chroot/arm64-bookworm"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -fdiagnostics-color=always -g3 -fno-omit-frame-pointer -funwind-tables",
        "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -fdiagnostics-color=always -g3 -fno-omit-frame-pointer -funwind-tables",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld-19 -rdynamic",
        "BINARY_POSTFIX": "-arm64"
      }
    },
    {
      "name": "arm64-release",
      "displayName": "ARM64 Clang Release",
      "description": "Release build for ARM64 using Clang cross-compiler with schroot sysroot",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-release-arm64",
      "toolchainFile": "${sourceDir}/arm64-toolchain.cmake",
      "environment": {
        "CC": "clang-19",
        "CXX": "clang++-19",
        "LDFLAGS": "-fuse-ld=lld-19",
        "PKG_CONFIG_PATH": "/srv/chroot/arm64-bookworm/usr/lib/aarch64-linux-gnu/pkgconfig:/srv/chroot/arm64-bookworm/usr/lib/pkgconfig",
        "PKG_CONFIG_SYSROOT_DIR": "/srv/chroot/arm64-bookworm"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG",
        "CMAKE_C_FLAGS": "-O3 -DNDEBUG",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld-19",
        "BINARY_POSTFIX": "-arm64"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Clang Release",
      "description": "Release build using Clang compiler",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-release",
      "environment": {
        "CC": "/usr/bin/clang-19",
        "CXX": "/usr/bin/clang++-19",
        "LDFLAGS": "-fuse-ld=lld-19"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld-19",
        "BINARY_POSTFIX": "-x64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug",
      "targets": [
        "grinder_backend"
      ]
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release",
      "targets": [
        "grinder_backend"
      ]
    },
    {
      "name": "arm64-debug",
      "configurePreset": "arm64-debug",
      "targets": [
        "grinder_backend"
      ]
    },
    {
      "name": "arm64-release",
      "configurePreset": "arm64-release",
      "targets": [
        "grinder_backend"
      ]
    }
  ]
}